{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["esnext"],
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "newLine": "LF"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
